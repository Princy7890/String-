#include <iostream>
#include <string>
#include <cctype>
using namespace std;

int main() {
    string str;
    cout << "Enter a string: ";
    getline(cin, str); // allows spaces

    int vowels = 0, consonants = 0;

    for (char c : str) {
        c = tolower(c); // convert to lowercase for easy checking
        if (isalpha(c)) { // check if itâ€™s a letter
            if (c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u')
                vowels++;
            else
                consonants++;
        }
    }

    cout << "Number of vowels: " << vowels << endl;
    cout << "Number of consonants: " << consonants << endl;

    return 0;
}
