#include <iostream>
#include <string>
#include <cctype>
using namespace std;

int main() {
    string str;
    cout << "Enter a string: ";
    getline(cin, str);  // allows spaces

    string result = "";

    for (char c : str) {
        if (isalpha(c)) {        // keep only alphabets (A-Z or a-z)
            result += c;
        }
    }

    cout << "String after removing non-alphabet characters: " << result << endl;

    return 0;
}
