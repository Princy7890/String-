#include <iostream>
#include <string>
#include <algorithm>
using namespace std;

bool isPalindrome(string str) {
    int left = 0;
    int right = str.length() - 1;

    while (left < right) {
        if (str[left] != str[right])
            return false; // mismatch found
        left++;
        right--;
    }
    return true; // all characters matched
}

int main() {
    string str;
    cout << "Enter a string: ";
    cin >> str;  // takes single word input (no spaces)

    if (isPalindrome(str))
        cout << "Palindrome";
    else
        cout << "Not Palindrome";

    return 0;
}
